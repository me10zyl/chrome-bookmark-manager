{
  "manifest_version": 3,
  "name": "书签管理器",
  "version": "1.0",
  "description": "一个简单的书签管理器",
  "permissions": [
    "bookmarks",
    "tabs",
    "history",
    "favicon",
    "tabGroups",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 